@model Hotel
@inject IHttpContextAccessor Accessors
@{
    string accountId = @Accessors.HttpContext.Session.GetString("ID");
}
<div class="pop-up" id="pop-up" style="margin-top: 10px">
        <div class="pop-up-content">
            <h1>Create hotel</h1>
            <form asp-controller="CRUDHotel" asp-action="CreateHotel" method="post">
                <input type="hidden" name="accountId" value="@accountId" />

                <label>Hotel's name</label>
                <input type="text" asp-for="HotelName" placeholder="Hotel's name" required />

                <label>Hotel's address</label>
                <input type="text" asp-for="HotelAddress" placeholder="Hotel's address" required />

                <label>Hotel's information</label>
                <textarea asp-for="HotelInfo" placeholder="Hotel's information" required>@Model.HotelInfo</textarea>

                <label>Province</label>
                <select id="province" name="province" required>
                    <option value="">Choose province</option>
                    @foreach (var province in ViewBag.Provinces)
                    {
                        <option>@province</option>
                    }
                </select><br />

                <label>Hotel's Price</label>
                <input type="text" asp-for="StartPrice" placeholder="Price" required />

                <label>Hotel's image</label>
                <input type="file" formenctype="multipart/form-data" name="hotelImage" accept="image/*" />
                <input type="submit" value="Create" placeholder="Create"/>
            </form>
        </div>
    </div>
