@model Hotel
@inject IHttpContextAccessor Accessors
@*@{
    string accountId = @Accessors.HttpContext.Session.GetString("ID");
}*@

<section class="innerpage-wrapper">
    <div id="update" class="innerpage-section-padding">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">

                    <div class="flex-content">
                        <div class="custom-form custom-form-fields">
                            <h3>Update hotel</h3>
                            <form asp-controller="CRUDHotel" asp-action="UpdateHotel" method="post">
                                <input type="hidden" name="accountId" value="@Model.HotelId" />
                               
                                <div class="form-group">
                                    <label>Hotel's name</label>
                                    <input type="text" asp-for="HotelName" placeholder="Hotel's name" value="@Model.HotelName" required />
                                </div>

                                <div class="form-group">
                                    <label>Hotel's address</label>
                                    <input type="text" asp-for="HotelAddress" placeholder="Hotel's address" value="@Model.HotelAddress" required />
                                </div>
                                <div class="form-group">
                                    <label>Hotel's information</label>
                                    <textarea asp-for="HotelInfo" placeholder="Hotel's information" required>@Model.HotelInfo</textarea>
                                </div>
                                <div class="form-group">
                                    <label>Province</label>
                                    <select id="province" name="province" required>
                                        <option value="">Chọn tỉnh thành</option>
                                        @foreach (var province in ViewBag.Provinces)
                                        {
                                            <option value="@province">@province</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Hotel's Price</label>
                                    <input type="text" asp-for="StartPrice" placeholder="Price" value="@Model.StartPrice" required />
                                </div>
                                <div class="form-group">
                                    <label>Hotel's image</label>
                                    <input type="file" name="hotelImage" accept="image/*" />
                                </div>
                                <button name="hotelID" type="submit" value="@Model.HotelId">Update</button>
                            </form>
                        </div><!-- end custom-form -->
                    </div><!-- end form-content -->
                </div><!-- end columns -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end login -->
</section><!-- end innerpage-wrapper -->


