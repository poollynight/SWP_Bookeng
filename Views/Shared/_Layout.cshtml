@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessors
@{
    ViewData["Title"] = "Bookeng";
}
<!DOCTYPE html>
<html lang="en">
@if (@Accessors.HttpContext.Session.GetString("ID") == null || @Accessors.HttpContext.Session.GetString("ID").Contains("U"))
{
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <link rel="icon" href="~/img/logo.png" type="image/x-icon">

        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Lato:300,300i,400,400i,700,700i,900,900i%7CMerriweather:300,300i,400,400i,700,700i,900,900i" rel="stylesheet">

        <!-- Bootstrap Stylesheet -->
        <link rel="stylesheet" href="~/css/bootstrap.min.css">

        <!-- Font Awesome Stylesheet -->
        <link rel="stylesheet" href="~/css/font-awesome.min.css">

        <!-- Custom Stylesheets -->
        <link rel="stylesheet" href="~/css/style.css">
        <link rel="stylesheet" id="cpswitch" href="~/css/orange.css">
        <link rel="stylesheet" href="~/css/responsive.css">

        <!-- Owl Carousel Stylesheet -->
        <link rel="stylesheet" href="~/css/owl.carousel.css">
        <link rel="stylesheet" href="~/css/owl.theme.css">

        <!-- Flex Slider Stylesheet -->
        <link rel="stylesheet" href="~/css/flexslider.css" type="text/css" />

        <!--Date-Picker Stylesheet-->
        <link rel="stylesheet" href="~/css/datepicker.css">

        <!-- Magnific Gallery -->
        <link rel="stylesheet" href="~/css/magnific-popup.css">
    </head>
    <body>



        <!--============= TOP-BAR ===========-->
        <div id="top-bar" class="tb-text-white">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div id="info">
                            <ul class="list-unstyled list-inline">
                                <li><a asp-action="AdminLogin" asp-controller="AdminLogin"><img src="~/img/Vn.png" /></a></li>
                                <li><span><i class="fa fa-map-marker"></i></span>29 Land St, Lorem City, CA</li>
                                <li><span><i class="fa fa-phone"></i></span>+00 123 4567</li>
                            </ul>
                        </div><!-- end info -->
                    </div><!-- end columns -->
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div id="links">
                            @*@{int x = Context.Session.Get("account");}*@
                            @if (@Accessors.HttpContext.Session.GetString("ID") == null)
                            {
                                <ul class="list-unstyled list-inline">
                                    <li><a asp-area="" asp-controller="Login" asp-action="Login"><span><i class="fa fa-lock"></i></span>Login</a></li>
                                    <li><a asp-area="" asp-controller="Signup" asp-action="Signup"><span><i class="fa fa-plus"></i></span>Sign Up</a></li>
                                </ul>

                            }
                            else if (@Accessors.HttpContext.Session.GetString("ID").Contains("U"))
                            {
                                <ul class="list-unstyled list-inline">
                                    <li style="color: white; font-weight: bold; text-decoration: none"><a asp-area="" asp-controller="OwnerSignup" asp-action="OwnerSignup"><span><i class="fa fa-plus"></i></span>List your properties</a></li>
                                    <li style="color: white; font-weight: bold;"><a href="@Url.ActionLink("UserProfile","UserProfile", new { id = Accessors.HttpContext.Session.GetString("ID")})">Hi, @Accessors.HttpContext.Session.GetString("Username")</a></li>
                                    <li><a href="@Url.ActionLink("Logout","Home")"><span><i class="fa fa-minus"></i></span>Log out</a></li>
                                </ul>
                            }
                            @*else if (@Accessors.HttpContext.Session.GetString("ID").Contains("O"))
                        {
                        <ul class="list-unstyled list-inline">
                        <li style="color: white; font-weight: bold; text-decoration: none"><a href="@Url.ActionLink("AdminHome","AdminHome")">Manage your properties</a></li>
                        <li style="color: white; font-weight: bold;"><a href="@Url.ActionLink("UserProfile","UserProfile", new { id = Accessors.HttpContext.Session.GetString("OwnerID")})">Hi, @Accessors.HttpContext.Session.GetString("Username")</a></li>
                        <li><a href="@Url.ActionLink("Logout","Home")"><span><i class="fa fa-minus"></i></span>Log out</a></li>
                        </ul>
                        }*@
                        </div><!-- end links -->
                    </div><!-- end columns -->
                </div><!-- end row -->
            </div><!-- end container -->
        </div><!-- end top-bar -->
        <nav class="navbar navbar-default main-navbar navbar-custom navbar-white" id="mynavbar-1">
            <div class="container">
                <div class="navbar-header">
                    <div class="header-search hidden-lg">
                    </div>
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">Bookeng</a>
                </div><!-- end navbar-header -->
            </div><!-- end container -->
        </nav><!-- end navbar -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)

    </body>
}
