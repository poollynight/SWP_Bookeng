                            <a class="collapse-item" href="@Url.ActionLink("Properties","OwnerHome")">Properties</a>
                            <a class="collapse-item" asp-action="SendOrder" asp-controller="SendOrder">Orders</a>
                        </div>
                    </div>
                </li>
                <!-- Sidebar Toggler (Sidebar) -->
                <div class="text-center d-none d-md-inline">
