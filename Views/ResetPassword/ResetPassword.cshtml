@using SWP_template.Models
@model ResetPasswordViewModel

<!--===== INNERPAGE-WRAPPER ====-->
<section class="innerpage-wrapper">
    <div id="forgot-password" class="innerpage-section-padding">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="flex-content">
                        <div class="custom-form custom-form-fields">
                            <h3>Reset Your Password</h3>
                            @using (Html.BeginForm("ResetPassword", "ResetPassword", HttpMethod.Post))
                            {

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "sr-only", @for = "inputPassword" })
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg password", id = "inputPassword",name = "Password", placeholder = "Password", type="password", required="required" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    <span><i class="fa fa-lock"></i></span>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "sr-only", @for = "inputPassword" })
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg password_confirmation", id = "inputPassword", name = "ConfirmPassword", placeholder = "Confirm Password", type="password" , required="required"})
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                    <span><i class="fa fa-lock"></i></span>
                                </div>
                                <button class="btn btn-orange btn-block" type="submit">Confirm</button>

                            }

                        </div><!-- end custom-form -->

                        <div class="flex-content-img custom-form-img">
                            <img src="~/img/forgot-password-real.jpg" class="img-responsive" alt="registration-img" />
                        </div><!-- end custom-form-img -->
                    </div><!-- end form-content -->

                </div><!-- end columns -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end forgot-password -->
</section><!-- end innerpage-wrapper -->
<!-- Page Scripts Starts -->
<script src="~/js/jquery.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/custom-navigation.js"></script>
<!-- Page Scripts Ends -->
